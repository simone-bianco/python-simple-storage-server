{
    "openapi": "3.0.0",
    "info": {
        "title": "Simple Storage Server API",
        "description": "API for uploading, downloading, and managing files.",
        "contact": {
            "email": "admin@example.com"
        },
        "version": "1.0.0"
    },
    "paths": {
        "/health": {
            "get": {
                "tags": ["System"],
                "summary": "Check system health",
                "operationId": "healthCheck",
                "responses": {
                    "200": {
                        "description": "Successful operation"
                    }
                }
            }
        },
        "/upload": {
            "post": {
                "tags": ["Files"],
                "summary": "Upload a file",
                "operationId": "uploadFile",
                "security": [{"ApiKeyAuth": []}],
                "requestBody": {
                    "required": true,
                    "content": {
                        "multipart/form-data": {
                            "schema": {
                                "properties": {
                                    "file": {
                                        "type": "string",
                                        "format": "binary"
                                    },
                                    "job_id": {
                                        "type": "string"
                                    }
                                },
                                "type": "object"
                            }
                        }
                    }
                },
                "responses": {
                    "201": {
                        "description": "File uploaded successfully"
                    }
                }
            }
        }
    },
    "components": {
        "securitySchemes": {
            "ApiKeyAuth": {
                "type": "apiKey",
                "name": "X-API-Key",
                "in": "header"
            }
        }
    }
}
